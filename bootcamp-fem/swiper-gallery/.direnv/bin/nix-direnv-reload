#!/usr/bin/env bash
set -e
if [[ ! -d "/home/sultan/Documents/dev-learning/bootcamp-fem/swiper-gallery" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/sultan/Documents/dev-learning/bootcamp-fem/swiper-gallery")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/sultan/Documents/dev-learning/bootcamp-fem/swiper-gallery" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/sultan/Documents/dev-learning/bootcamp-fem/swiper-gallery/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/sultan/Documents/dev-learning/bootcamp-fem/swiper-gallery/.envrc" "/home/sultan/Documents/dev-learning/bootcamp-fem/swiper-gallery/.direnv"/*.rc
